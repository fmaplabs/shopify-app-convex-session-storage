{
  "name": "@fmap-labs/shopify-app-convex-session-storage",
  "version": "1.0.0",
  "author": "fmap(labs)",
  "license": "MIT",
  "description": "A Convex component for Shopify app session storage - store and manage Shopify OAuth sessions in your Convex database",
  "keywords": [
    "shopify",
    "convex",
    "session-storage",
    "oauth",
    "shopify-app",
    "session-management",
    "convex-component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fmaplabs/shopify-app-convex-session-storage.git"
  },
  "homepage": "https://github.com/fmaplabs/shopify-app-convex-session-storage#readme",
  "bugs": {
    "url": "https://github.com/fmaplabs/shopify-app-convex-session-storage/issues"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project ./esm.json && echo '{\\n  \"type\": \"module\"\\n}' > dist/esm/package.json",
    "build:cjs": "tsc --project ./commonjs.json && echo '{\\n  \"type\": \"commonjs\"\\n}' > dist/commonjs/package.json",
    "dev": "cd example; npm run dev",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepack": "node node10stubs.mjs",
    "postpack": "node node10stubs.mjs --cleanup",
    "test": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text"
  },
  "files": [
    "dist",
    "src/component",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@fmap-labs/component-source": "./src/client/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "@fmap-labs/component-source": "./src/client/index.ts",
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./convex.config": {
      "import": {
        "@fmap-labs/component-source": "./src/component/convex.config.ts",
        "types": "./src/component/convex.config.d.ts",
        "default": "./src/component/convex.config.js"
      }
    }
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "dependencies": {
    "@shopify/shopify-api": "^12.0.0",
    "@shopify/shopify-app-session-storage": "^4.0.0",
    "convex-helpers": "^0.1.67"
  },
  "peerDependencies": {
    "convex": ">=1.17.0"
  },
  "peerDependenciesMeta": {
    "convex": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^18.17.0",
    "eslint": "^9.9.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.4.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
