{
  "name": "shopify-app-convex-session-storage",
  "version": "1.0.0",
  "author": "fmap(labs)",
  "license": "MIT",
  "description": "Convex Adapter for Shopify apps sessions storage",
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run copy:css",
    "build:esm": "tsc --project ./esm.json && printf '{\\n  \"type\": \"module\"\\n}' > dist/esm/package.json",
    "build:cjs": "tsc --project ./commonjs.json && printf '{\\n  \"type\": \"commonjs\"\\n}' > dist/commonjs/package.json",
    "copy:css": "cp src/facepile/facepile.css dist/esm/facepile/ && cp src/facepile/facepile.css dist/commonjs/facepile/",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "files": [
    "dist",
    "src",
    "react"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/esm/client/index.d.ts",
        "default": "./dist/esm/client/index.js"
      },
      "require": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/commonjs/client/index.d.ts",
        "default": "./dist/commonjs/client/index.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/esm/component/convex.config.d.ts",
        "default": "./dist/esm/component/convex.config.js"
      }
    }
  },
  "peerDependencies": {
    "convex": ">=1.24.8 <1.35.0",
    "expo-crypto": ">=14.1.0"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^18.17.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/react-native": "^0.72.8",
    "eslint": "^9.9.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.4.0"
  },
  "main": "./dist/commonjs/client/index.js",
  "types": "./dist/commonjs/client/index.d.ts",
  "module": "./dist/esm/client/index.js",
  "dependencies": {
    "@shopify/shopify-api": "^12.0.0",
    "@shopify/shopify-app-session-storage": "^4.0.0"
  }
}
